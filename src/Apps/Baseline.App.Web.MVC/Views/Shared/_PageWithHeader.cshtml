@{
    Layout = "_Layout";
    var breadCrumbs = (Dictionary<string, string>)(ViewData["BreadCrumbs"] ?? new Dictionary<string, string>());
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            @if (breadCrumbs.Any())
            {
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
                        @foreach (var breadCrumb in breadCrumbs)
                        {
                            bool isActive = breadCrumbs.Last().Equals(breadCrumb);

                            if (isActive)
                            {
                                <li class="breadcrumb-item active">@breadCrumb.Key</li>
                            }
                            else
                            {
                                <li class="breadcrumb-item"><a href="@breadCrumb.Value">@breadCrumb.Key</a></li>
                            }
                        }
                    </ol>
                </div>
            }
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        @RenderBody()

    </div><!--/. container-fluid -->
</section>
<!-- /.content -->